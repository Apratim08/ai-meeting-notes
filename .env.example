# AI Meeting Notes Configuration
# Copy this file to .env and modify as needed

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_DEVICE_ID=  # Leave empty for auto-detection
MIC_GAIN=0.5  # Microphone gain multiplier (0.0-2.0)

# Transcription Settings
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
TRANSCRIPTION_LANGUAGE=auto  # Language code or 'auto'

# Server Settings
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
DEBUG=false
